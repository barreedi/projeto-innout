$today = @strftime('%d de %B de %Y', $date);//modelo da data os batimentos efetuados hoje

$user =$SESSION['user'];
$records = WorkingHours::loadFromUserAndDate($user->id, date('Y-m-d'));

loadTemplateView('day_records', ['today'=> $today,'records' => $records]);//array sociativo records para mostrar na tela








(leader.php)


//o loader serve para carregar vews e  model

function loadModel($modelName) {//criou funcao loadmodel
  //require_once(MODEL_PATH . "/{$modelName}.php");//chamando o require dentro da pasta modelpath e gerando contatenando arquivo modelname.php

}
function loadView($viewName,$params = array()) {//criou funcao view e criando uma variavel params com array vazio para a view

  if(count($params) > 0 ){ //se params for maior q zero 
        foreach($params as $key => $value){//
           if(strlen($key) > 0 ){//se a key for maior q zero
            ${$key} = $value;//se a chave key ta direcionando uma variavel q criou no banco value

         } 
       }
    }

    require_once(VIEW_PATH . "/{$viewName}.php");//chamando o require dentro da pasta viewpath e gerando contatenando arquivo viewname.php
  
}
function loadTemplateView($viewName,$params = array()) {//criou funcao view e criando uma variavel params com array vazio para a view template

  if(count($params) > 0 ){ //se params for maior q zero 
        foreach($params as $key => $value){//
           if(strlen($key) > 0 ){//se a key for maior q zero
            ${$key} = $value;//se a chave key ta direcionando uma variavel q criou no banco value

         } 
       }
    }

    require_once(TEMPLATE_PATH . "/header.php");//chamando o require dentro da pasta viewpath e gerando contatenando arquivo viewname.php
    require_once(TEMPLATE_PATH . "/left.php");
    require_once(VIEW_PATH . "/{$viewName}.php");
    require_once(TEMPLATE_PATH . "/footer.php");
    
    
}
function renderTitle($title,$subtitle,$icon= null){
  require_once(TEMPLATE_PATH . "/title.php");//chamando template path title.php

}




function addSuccessMsg($msg) {//para qd marcar ponto mensagem de sucesso
    $_SESSION['message'] = [
        'type' => 'success',//vai mostrar sucesso
        'message' => $msg
    ];
}

function addErrorMsg($msg) {//para qd marcar ponto mensagem de erro
    $_SESSION['message'] = [
        'type' => 'error',//vai mostrar erro
        'message' => $msg
    ];
}







